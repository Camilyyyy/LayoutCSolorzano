<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LayoutCSolorzano.Views.ColorGrid"
             Title="ColorGrid">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <BoxView Color="Green" Grid.Row="0" Grid.Column="0" />
        <BoxView Color="CornflowerBlue" Grid.Row="0" Grid.Column="1"/>
        <BoxView Color="Yellow" Grid.Row="1" Grid.Column="0"/>

        <VerticalStackLayout Grid.Row="1" Grid.Column="1">
            <BoxView Color="Red" />
            <Button Text="Ir a StackLayout" Clicked="ButtonNextPage" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>