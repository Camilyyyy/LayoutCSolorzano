<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LayoutCSolorzano.Views.FlexLayoutPage"
             Title="FlexLayoutPage">

    <ScrollView>
        <FlexLayout Direction="Column" 
                    AlignItems="Center" 
                    JustifyContent="Center">

            <StackLayout Orientation="Vertical" 
                         HorizontalOptions="FillAndExpand">
                <Button Text="Boton Inutil 1" VerticalOptions="Center"  WidthRequest="200" HeightRequest="50"/>
                <Label HeightRequest="80"/>
                <Button Text="Boton Inutil 2" VerticalOptions="Center"  WidthRequest="200" HeightRequest="50"/>
                <Label HeightRequest="80"/>
                <Button Text="Boton Inutil 3" VerticalOptions="Center"  WidthRequest="200" HeightRequest="50"/>
                <Label HeightRequest="80"/>
                <Button Text="Boton Inutil 4" VerticalOptions="Center"  WidthRequest="200" HeightRequest="50"/>

            </StackLayout>
            <Label HeightRequest="80"/>
            <Button Text="Ir a Absolute Layout" Clicked="ButtonNextPage" BackgroundColor="Aquamarine" />


        </FlexLayout>
    </ScrollView>
</ContentPage>