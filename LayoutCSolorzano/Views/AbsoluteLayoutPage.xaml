<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LayoutCSolorzano.Views.AbsoluteLayoutPage"
             Title="AbsoluteLayoutPage">

    <AbsoluteLayout>

    
        <Image Source="gatito.png.jpg"
               WidthRequest="900"
               HeightRequest="500"
               AbsoluteLayout.LayoutBounds="0.5,0.5,200,200"
               AbsoluteLayout.LayoutFlags="PositionProportional" />

        <Button Text="Boton Grid"
                WidthRequest="200"
                HeightRequest="50"
                Clicked="ButtonNextPage"
                AbsoluteLayout.LayoutBounds="1,1,200,50"
                AbsoluteLayout.LayoutFlags="PositionProportional" />

    </AbsoluteLayout>

</ContentPage>