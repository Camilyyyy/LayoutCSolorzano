<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LayoutCSolorzano.Views.AbsoluteLayoutPage"
             Title="AbsoluteLayoutPage">

    <ScrollView>
        <FlexLayout>
            <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand">
                <Image Source="gatito.png.jpg" WidthRequest="500" HeightRequest="500" VerticalOptions="Center"/>
                <Label HeightRequest="80"/>
                <Button Text="Boton Grid" VerticalOptions="Center" WidthRequest="200" HeightRequest="50" Clicked="ButtonNextPage"/>
            </StackLayout>
        </FlexLayout>
    </ScrollView>

</ContentPage>
